<lccdd>

  <define>

    <documentation>
      #### HCal Thicknesses 
    </documentation>
    <constant name="pHCal_AbsorberThickness"       value="2.0 * cm"/>
    <constant name="pHCal_ScintillatorThickness" value="0.3 * cm"/>
    <constant name="pHCal_AirThickness"         value="0.04 * cm"/>

    <constant name="pHCal_LayerThickness" 
      value="pHCal_AbsorberThickness +
             pHCal_ScintillatorThickness +
             pHCal_AirThickness"
    />

  </define>

  <limits>
  </limits>

  <regions>
  </regions>

  <display>
  </display>

  <!-- Define detector -->
  <detectors>

    <detector 
      id="HCalEndcapP_ID" 
      name="HcalEndcapP" 
      type="pEndcap" 
      readout="HcalEndcapPHits" 
      vis="HcalEndcapVis" >
      <position x="0" y="0" z="pHCal_zmin"/>
      <comment> HCal has 50 layers + 1 layer of just absorber </comment>
      <dimensions 
        z="pHCal_LayerThickness*(pHCal_numLayers-1) +
           pHCal_AbsorberThickness" 
        rmin="pHCal_rmin"
        rmax="pHCal_rmax"/>
      <layer 
        repeat="pHCal_numLayers"
        vis="HcalEndcapLayerVis" 
        thickness = "pHCal_LayerThickness"
      >
        <slice 
          material="Steel235"
          thickness="pHCal_AbsorberThickness"
          vis="AnlLight_Gray"
        />
        <slice 
          material="PlasticScint126"
          thickness="pHCal_ScintillatorThickness"
          vis="AnlOrange"
          sensitive="yes"
        />
        <slice 
          material="Air"
          thickness="pHCal_AirThickness"
          vis="Invisible"
        />
      </layer>
      <insert>
        <position x="pHCalInsert_xpos" y="0" z = "0" />
        <dimensions
          x="pHCalInsert_xtotal"
          y="pHCalInsert_ytotal"
          z="pHCalInsert_LayerThickness*pHCalInsert_numLayers"
        />
      </insert>
    </detector>

  </detectors>
  <!--  Definition of the readout segmentation/definition  -->
  <readouts>
    <readout name="HcalEndcapPHits">
      <segmentation 
        type="CartesianGridXY" 
        grid_size_x="100 * mm" 
        grid_size_y="100 * mm"
      />
      <id>system:8,barrel:3,module:4,layer:8,slice:5,x:32:-16,y:-16</id>
    </readout>
  </readouts>

  <plugins>
  </plugins>

  <fields>
  </fields>
</lccdd>
